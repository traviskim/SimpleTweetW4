<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ibClose"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/button_close"
        android:background="@null"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivAddProfile"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        tools:src="@drawable/ic_launcher"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etBody"
        android:layout_below="@+id/ivAddProfile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:elegantTextHeight="false"
        android:height="200dp"
        android:hint="What&apos;s happening?"
        android:inputType="textMultiLine"
        android:maxHeight="200dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="top|left" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:id="@+id/btSend"
        android:background="#489cdf"
        android:textColor="#ffffff"
        android:layout_below="@+id/etBody"
        android:layout_alignRight="@+id/etBody"
        android:layout_alignEnd="@+id/etBody" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="140"
        android:id="@+id/tvLeftChar"
        android:layout_alignBottom="@+id/btSend"
        android:layout_toLeftOf="@+id/btSend"
        android:layout_toStartOf="@+id/btSend"
        android:layout_marginRight="10dp"/>


</RelativeLayout>